<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="20sp"
    android:paddingTop="10sp"
    android:paddingBottom="10sp"
    android:paddingEnd="20sp">

    <TextView
        android:id="@+id/hourTime"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:text="00:00" />

    <ImageView
        android:id="@+id/hourWeatherIcon"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_marginEnd="5sp"
        android:contentDescription="@string/sun_icon"
        android:src="@drawable/unknown_icon" />

    <TextView
        android:id="@+id/hourTemperature"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:text="0Â°C" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingStart="20sp">

        <ImageView
            android:id="@+id/currentWindSpeedIcon"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginEnd="5sp"
            android:contentDescription="@string/sun_icon"
            android:src="@drawable/wind_icon" />

        <TextView
            android:id="@+id/hourWindSpeed"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="0km/h" />
    </LinearLayout>
</LinearLayout>