<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".views.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/currentWeatherBigIcon"
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:contentDescription="@string/sun_icon"
                android:src="@drawable/unknown" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="clip_horizontal|center_horizontal"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/currentLocationIcon"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_marginEnd="5sp"
                        android:contentDescription="@string/sun_icon"
                        android:src="@drawable/pin_icon" />

                    <TextView
                        android:id="@+id/currentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01-01-1970" />

                </LinearLayout>


                <TextView
                    android:id="@+id/currentTemperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10sp"
                    android:gravity="bottom"
                    android:paddingStart="20sp"
                    android:text="0Â°C"
                    android:textSize="60sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="20sp">

                    <TextView
                        android:id="@+id/currentWeather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="20sp">

                    <ImageView
                        android:id="@+id/currentWindSpeedIcon"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_marginEnd="5sp"
                        android:contentDescription="@string/sun_icon"
                        android:src="@drawable/wind_icon" />

                    <TextView
                        android:id="@+id/currentWindSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5sp"
                        android:text="Loading" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>